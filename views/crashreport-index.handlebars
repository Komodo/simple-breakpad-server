<div class="page-header">
  <h1>Crash Reports</h1>
</div>

<form method="GET">
<div class="form-group row">
  <div class="col-md-9">
    <input type="text" name="s" value="{{req.query.s}}" class="form-control" placeholder="Search .."/>
  </div>
  <div class="col-md-2">
    <input type="checkbox" name="c" value="1" {{#if req.query.c}}checked="checked"{{/if}}/> has comments
  </div>
  <div class="col-md-1">
    <button type="submit" class="btn btn-default">Go</button>
  </div>
</div>
</form>

{{#if records}}
<table class="table">

  <tr>
    {{#each fields}}
      <th>{{titleCase this}}</th>
    {{/each}}
    <th></th>
  </tr>

  {{#each records}}
    <tr>
    {{#each this.props}}
      <td>
        {{this}}
      </td>
    {{/each}}
      <td>
        <a href="{{reportUrl this.id}}">view</a>
      </td>
    </tr>
  {{/each}}
</table>
{{> pagination}}
{{else}}
  <p>No crash reports</p>
{{/if}}

